extends layouts/base
include ./mixins/index.pug
block content
  include layouts/header
  include ./variables/variables.pug
  tr
        h2(style="padding: 0; font-size: 2rem; line-height: 3rem; font-weight: 700; margin: 40px 0;") Application Received!
        +statusBanner(applicationReceivedBannerBackgroundColor, riskStatus, bannerLogo)
        p(style="padding: 0; font-size: 20px; line-height: 30px; margin-bottom: 40px; margin-top: 40px;") An application is now 
          span(style="font-weight: 600") #{riskStatus}
        include layouts/widget
          block widget_content
            +riskInfo(insuredName, riskNumber)
            if Object.keys(userDetails).length > 0
              span(style=`display: block; height: 4px; background-color: ${primaryColor}; opacity: .3; margin-top: 24px;`)
              +userDetails(userDetails)
            if coverages.length > 0
              +coverages(coverages)
        +button(viewRiskLink, "View risk")
  include layouts/footer