include badge
mixin coverages(coverages, showCoverageColumnPremium)
    include ../variables/variables.pug
    - const tdCoverageNameStyle = "font-size: 1rem; color: #121414; text-align: left; font-weight: 600;"
    table(cellpadding="0" cellspacing="0" border="0" width="100%" style="margin-top: 24px; margin-bottom: 16px; height: 32px;text-align: center; background-color: #F2F2F2; font-weight: 600; color: #1A1A1A; font-size: 0.875rem; border-radius: 8px")
        td(style=`text-align: ${showCoverageColumnPremium ? 'left' : 'center'}; padding-left: 16px;`) COVERAGES
        if showCoverageColumnPremium
            td(style="text-align: right; padding-right: 16px;") COVERAGE PREMIUM
    each coverage, index in coverages
        - var dollars = Math.floor(coverage.price)
        - var cents = ((coverage.price % 1).toFixed(2) + '').split('.')[1]
        - var formattedPrice = formatPrice(coverage.price)
        table(cellpadding="0" cellspacing="0" border="0" width="100%" style="margin-bottom: 8px")
            tr
                if showCoverageColumnPremium
                    td(style=tdCoverageNameStyle) 
                        span(style="display: inline-block; margin-bottom: 8px")  #{coverage.name}
                        +badge('Quote', coverage.quote, 'small')
                    td(align='center' style="font-weight: 700;font-size: 1.25rem; width: 45%") $#{formattedPrice.dollars}. 
                        sup(style="font-weight: 700;font-size: 1rem") #{formattedPrice.cents}
                else
                    td(style=tdCoverageNameStyle) #{coverage.name}
                    td(align='right')
                        +badge('Quote', coverage.quote, 'small')
        if index !== coverages.length - 1 && showCoverageColumnPremium
            div(style="width: 100%; height:1px; background-color:rgba(0,0,0, .1); margin: 16px 0")


    