include badge
include user_details
mixin riskInfo(insuredName, riskNumber)
    table(cellpadding="0" cellspacing="0" border="0" width="100%")
        tr
            td(align="center" valign="middle")
                p(style="font-size: 0.875rem; color: #828282; margin: 0;padding: 0;font-weight: 500;line-height: 24px;") INSURED NAME
                h2(style="margin: 0; padding: 0; font-size: 1.5rem; font-weight: 700; margin-bottom: 8px; color: #1A1A1A;line-height: 40px;") #{insuredName}
                +badge(_, riskNumber, primaryColor)