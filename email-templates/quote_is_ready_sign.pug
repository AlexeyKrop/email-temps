extends layouts/base
include ./mixins/index.pug
block content
  include layouts/header
  tr
     td(style="height: auto; background-color: #ffffff; padding: 40px 40px 64px; vertical-align: top;")
            h2(style="margin: 0;font-size: 2rem; line-height: 3rem; font-weight: 700; margin-bottom: 40px;") A formal quote from #{programCompanyName} is awaiting your signature.
            p(style="margin: 0;font-size: 20px; line-height: 30px; margin-bottom: 40px;") Please click the link below to view and sign your quote.
            +button(viewFormalQuoteLink, "View formal quote")
  include layouts/footer